<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--    <com.heaven.easyframework.titlebar.widget.CommonTitleBar-->
<!--        android:id="@+id/titlebar"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:visibility="visible"-->
<!--        android:elevation="@dimen/promotion_5"/>-->
    <FrameLayout
        android:id="@+id/lsfl_home_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/home_line" />

    <RelativeLayout
        android:id="@+id/home_foot_bg_panel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/promotion_56"
        android:layout_alignParentBottom="true"
        android:background="@color/color_F9F9F9"
        android:gravity="center_vertical|center_horizontal">

        <ImageView
            android:id="@+id/home_foot_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/lsll_home_foot_new"
            android:layout_width="match_parent"
            android:layout_height="@dimen/promotion_56"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal" />
    </RelativeLayout>

    <View
        android:id="@+id/home_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/home_foot_bg_panel"
        android:background="@color/color_cccccc" />

</RelativeLayout>